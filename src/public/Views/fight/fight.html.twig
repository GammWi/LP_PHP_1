{% include '/layout/header.html.twig' %}

<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title"> Page de tabassage de noobs </h3>

        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove">
                <i class="fa fa-times"></i></button>
        </div>
    </div>
    <div class="box-body">
        <h3> Les héros sélectionnés : </h3>

            {% for hero in heros %}
                <div class="info-box bg-green" style="width: 25%">
                    <img class="info-box-icon" src="../../assets/img/characters/hero.png">

                    <div class="info-box-content">
                        <span class="info-box-text">{{ hero.firstname }} {{ hero.name }}</span>
                        <span class="info-box-number">92,050</span>

                        <div class="progress">
                            <div class="progress-bar" style="width: 20%"></div>
                        </div>
                        <span class="progress-description">
                    20% Increase in 30 Days
                  </span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
            {% endfor %}

        <h3> Les méchants sont : </h3>

            {% for monstre in monstres %}
                <div class="info-box bg-red" style="width: 25%">
                    <img class="info-box-icon" src="../../assets/img/characters/monstre.png">
                    <div class="info-box-content">
                        <span class="info-box-text">{{ monstre.name }}</span>
                        <span class="info-box-number">114,381</span>

                        <div class="progress">
                            <div class="progress-bar" style="width: 70%"></div>
                        </div>
                        <span class="progress-description">
                    70% Increase in 30 Days
                  </span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
            {% endfor %}

    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        {% include '/layout/footer.html.twig' %}
    </div>
    <!-- /.box-footer-->
</div>

<section class="content">

    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Title</h3>

            <div class="box-tools pull-right">
