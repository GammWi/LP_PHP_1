<div class="container white-text">
    <h2 class="white-text center-align">Puisse le sort vous être favorable !</h2>

    <div class="row valign-wrapper flex" style="justify-content: center">
        {% for perso in combat.persos %}
            <div class="black-text blue-grey bounce-top card horizontal" style="width: 256px">
                <div class="card-image center-block center">
                    <img style="width: 256px" src="../../public/assets/img/characters/hero.png"
                         alt="Un héros">
                </div>
                <div class="card-stacked">
                    <div class="card-content">
                        <h5 class="center"> {{ perso.name }} </h5>
                        Points de vie
                        <div class="progress">
                            <div class="green determinate" style="width: {{ perso.race.hp }}%"></div>
                        </div>
                        Attaque
                        <div class="progress">
                            <div class="green determinate" style="width: {{ perso.race.attack }}%"></div>
                        </div>
                        Défense
                        <div class="progress">
                            <div class="green    determinate" style="width: {{ perso.race.defense }}%"></div>
                        </div>
                        Agilité
                        <div class="progress">
                            <div class="green determinate" style="width: {{ perso.race.agility }}%"></div>
                        </div>
                    </div>
                </div>
            </div>
            {% if loop.index == 1 %}
                <img style="display: block; width: 300px"
                     src="https://media1.giphy.com/media/l4pTkNEd2P4MWo9iw/source.gif">
            {% endif %}
        {% endfor %}
    </div>
    <div style="position: fixed; bottom: 0; left:0; z-index: 9999; width: 100%" class="row">
        <button id="start" class="waves-effect waves-light btn-large red col"
                style="width: 100%;font-size: 0.85em; font-weight: bold;"> Qui commence ?
            Le hasard est roi
        </button>
    </div>
    <script>
        const boutonStart = document.getElementById('start');
        let send = JSON.stringify({{ combat.persos | json_encode() | raw }});
        boutonStart.addEventListener("click", function (_) {
            post('startFight', {persos: send})
        })
    </script>
</div>

