{% extends '/layout/header.html.twig' %}

{% block content %}
<H1> Page pour reset le mot de passe </H1>

<form action="{{ path_for('auth.reset')}}" method="POST">
    <div class="form-group">
        <label for="passwordOld">Ancien Password</label>
        <input type="password" class="form-control" name="passwordOld" required="required" placeholder="Ancien password">
    </div>
    <div class="form-group">
        <label for="passwordNew1">Nouveau mot de passe</label>
        <input type="password" class="form-control" name="passwordNew1" required="required" placeholder="Mot de passe">
    </div>
    <div class="form-group">
        <label for="passwordNew2">Confirmer le nouveau mot de passe</label>
        <input type="password" class="form-control" name="passwordNew2" required="required" placeholder="Confirmation">
    </div>
    
    <button type="submit" class="btn btn-primary">Changer le mot de passe</button>
</form>

{% include '/layout/footer.html.twig' %}

{% endblock %}